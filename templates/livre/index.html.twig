{% extends 'base.html.twig' %}

{% block title %}Livre index
{% endblock %}

{% block main %}
	<h1>Livre(s)</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Titre</th>
				<th>Summary</th>
				<th>Number_of_page</th>
				<th>Date_parution</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for livre in livres %}
				<tr>
					<td>{{ livre.id }}</td>
					<td>{{ livre.titre }}</td>
					<td>{{ livre.summary }}</td>
					<td>{{ livre.numberOfPage }}</td>
					<td>{{ livre.dateParution ? livre.dateParution|date('Y-m-d') : '' }}</td>
					<td>
						<a href="{{ path('app_livre_show', {'id': livre.id}) }}">show</a>
						<a href="{{ path('app_livre_edit', {'id': livre.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
